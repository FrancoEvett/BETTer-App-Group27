<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bckgnd"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/LECT"
        android:layout_width="91dp"
        android:layout_height="41dp"
        android:backgroundTint="@color/dark_purple"
        android:textColor="@android:color/white"
        android:background="@drawable/button_shape"
        android:onClick="lect"
        android:text="LECT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <Button
        android:id="@+id/ESGW"
        android:layout_width="91dp"
        android:layout_height="41dp"
        android:backgroundTint="@color/dark_purple"
        android:textColor="@android:color/white"
        android:background="@drawable/button_shape"
        android:onClick="esgw"
        android:text="ESGW"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <Button
        android:id="@+id/TOWC"
        android:layout_width="91dp"
        android:layout_height="41dp"
        android:backgroundTint="@color/dark_purple"
        android:textColor="@android:color/white"
        android:background="@drawable/button_shape"
        android:onClick="towc"
        android:text="TOWC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <Button
        android:id="@+id/QDNT"
        android:layout_width="91dp"
        android:layout_height="41dp"
        android:backgroundTint="@color/dark_purple"
        android:textColor="@android:color/white"
        android:background="@drawable/button_shape"
        android:onClick="qdnt"
        android:text="QDNT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <Button
        android:id="@+id/HWLL"
        android:layout_width="91dp"
        android:layout_height="41dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/dark_purple"
        android:onClick="hwll"
        android:text="HWLL"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/text_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/WLFB"
        android:layout_width="91dp"
        android:layout_height="41dp"
        android:onClick="wlfb"
        android:backgroundTint="@color/dark_purple"
        android:textColor="@android:color/white"
        android:background="@drawable/button_shape"
        android:text="WLFB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <ImageView
        android:id="@+id/esgw_image"
        android:layout_width="417dp"
        android:layout_height="472dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/easterngateway" />

    <ImageView
        android:id="@+id/qdnt_image"
        android:layout_width="417dp"
        android:layout_height="472dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/esgw_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/halsbury" />

    <ImageView
        android:id="@+id/lect_image"
        android:layout_width="417dp"
        android:layout_height="472dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/esgw_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lecturecentre" />

    <ImageView
        android:id="@+id/towc_image"
        android:layout_width="417dp"
        android:layout_height="472dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/esgw_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/towerc" />

    <ImageView
        android:id="@+id/wlfb_image"
        android:layout_width="417dp"
        android:layout_height="472dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/esgw_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/wilfredbrown" />

    <ImageView
        android:id="@+id/howell"
        android:layout_width="417dp"
        android:layout_height="472dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/esgw_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/howell" />

</androidx.constraintlayout.widget.ConstraintLayout>